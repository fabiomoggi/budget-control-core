{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,

    "outDir": "dist",
    "rootDir": "src",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "stripInternal": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["test", "**/*.test.ts", "**/*.spec.ts"]
}
